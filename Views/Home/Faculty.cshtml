@model RITFacultyV1.ViewModels.FacultyViewModel

<h2>@Model.Title</h2>
<p>Click on faulty name to see more information.</p>

@foreach (var faculty in Model.Faculty)
{
    <div class="col-sm-3 col-lg-3 col-md-3" style="height:350px;">
        <div class="thumbnail">
            <img style="height:100px;" src="@faculty.imagePath" alt="" />
            <div class="caption">
                <a style="font-size:small" href="#" data-featherlight="<h4>@faculty.name</h4><ul><li>@faculty.office</li><li>@faculty.phone</li></ul>">
                    <h3>@faculty.name</h3>
                </a>
                <h3 style="font-size:small">
                    @faculty.title
                </h3>
                <h3 style="font-size:small">
                    @faculty.email
                </h3>
            </div>
        </div>
    </div>
}