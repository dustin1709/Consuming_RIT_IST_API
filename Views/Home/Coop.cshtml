@model RITFacultyV1.ViewModels.CoopViewModel

<h1>@Model.Title</h1>
<p>Co-op table reflects students co-op.</p>

<div style="padding: 2%; clear:both;"></div>

<div style="margin: 1%; padding: 1%; border: 2px solid black;">
<table id="table" class="display cell-border compact">
    <thead>
        <tr>
            <th>Employer</th>
            <th>Degree</th>
            <th>City</th>
            <th>Term</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coop in Model.Coop)
        {
            <tr>
                <td>@coop.employer</td>
                <td>@coop.degree</td>
                <td>@coop.city</td>
                <td>@coop.term</td>
            </tr>
        }
    </tbody>
</table>
</div>
<div style="padding: 3.5%; clear:both;"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#table').DataTable();
        });
    </script>
}